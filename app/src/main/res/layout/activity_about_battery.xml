<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#DBDBDB"
    tools:context="com.nonexistentware.igor.batterystatus.AboutBattery">


    <TextView
        android:textColor="#C06C84"
        android:id="@+id/layout"
        android:gravity="center"
        android:text="STATUS"
        android:textSize="40sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


<RelativeLayout
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <TextView
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/batterylevel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Battery Level:"
        />
    <TextView
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/batteryvoltage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Battery Voltage:"
        android:layout_below="@+id/batterylevel"
        />
    <TextView
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/batterytemperature"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Battery Temperature:"
        android:layout_below="@+id/batteryvoltage"
        />
    <TextView
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/batterytechology"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Technology:"
        android:layout_below="@+id/batterytemperature"
        />
    <TextView
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/batterystatus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:layout_below="@+id/batterytechology"
        />


    <TextView
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/batteryhealth"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Health:"
        android:layout_below="@+id/batterystatus"
        />
    </RelativeLayout>

    <TextView
        android:textSize="20sp"
        android:text="Back"
        android:gravity="center"
        android:textColor="#C06C84"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
