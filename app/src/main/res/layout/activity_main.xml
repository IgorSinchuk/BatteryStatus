<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#312f44"
    tools:context="com.nonexistentware.igor.batterystatus.MainActivity">


    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:max="100"
            android:progress="75"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="75%"
            android:textColor="@color/colorPrimary"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <ImageView
        android:src="@drawable/batterylight"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginBottom="11dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:id="@+id/imageView2" />

    <ImageView
        android:src="@drawable/usblight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:id="@+id/imageView3" />

    <ImageView
        android:src="@drawable/aclight"
        android:layout_width="44dp"
        android:layout_height="45dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:id="@+id/imageView4" />

    <ImageView
        android:src="@drawable/charginglight"
        android:layout_width="43dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:id="@+id/charging"/>

    <ImageView
        android:src="@drawable/bar"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/top"
        android:layout_alignStart="@+id/top"
        android:layout_marginBottom="107dp"
        android:id="@+id/imageView" />

    <ImageView
        android:src="@drawable/batterystatus"
        android:id="@+id/batteryStatus"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <ImageView
        android:src="@drawable/aboutapp"
        android:id="@+id/aboutApp"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/batteryStatus"
        android:layout_alignLeft="@+id/batteryStatus"
        android:layout_alignStart="@+id/batteryStatus"
        android:layout_marginTop="20dp" />


    <TextView
        android:id="@+id/batteryVoltageTxt"
        android:layout_width="1dp"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/batteryTemperatureTxt"
        android:layout_width="1dp"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/batteryTechnologyTxt"
        android:layout_width="1dp"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/batteryStatusTxt"
        android:layout_width="1dp"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/batteryHealthTxt"
        android:layout_width="1dp"
        android:layout_height="1dp" />

</RelativeLayout>
