<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DBDBDB"
    tools:context="com.nonexistentware.igor.batterystatus.MainActivity">


    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:max="100"
            android:progress="75"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="75%"
            android:textColor="@color/colorPrimary"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>



    <ImageView
        android:src="@drawable/r1"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/top"
        android:layout_toStartOf="@+id/top" />

    <ImageView
        android:src="@drawable/r2"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView3"
        android:src="@drawable/r3"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/top"
        android:layout_toEndOf="@+id/top" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:src="@drawable/r4"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="77dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:src="@drawable/r5"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:src="@drawable/r6"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />


    <ImageView
        android:src="@drawable/volt"
        android:id="@+id/batteryVoltage"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageView
        android:id="@+id/batteryTemperature"
        android:src="@drawable/temperature"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/batteryVoltage"
        android:layout_centerHorizontal="true" />






</RelativeLayout>
