<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DBDBDB"
    tools:context="com.nonexistentware.igor.batterystatus.MainActivity">


    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:max="100"
            android:progress="75"
            android:progressDrawable="@drawable/circular_progress_bar" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="75%"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="102dp"
            android:layout_alignTop="@+id/progressBar"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

<RelativeLayout
    android:layout_below="@+id/top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout">
    <TextView
        android:textColor="#F57C0B"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/batterylevel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Battery Level:"
        />
    <TextView
        android:textColor="#F57C0B"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/batteryvoltage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Battery Voltage:"
        android:layout_below="@+id/batterylevel"
        />
    <TextView
        android:textColor="#F57C0B"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/batterytemperature"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Battery Temperature:"
        android:layout_below="@+id/batteryvoltage"
        />
    <TextView
        android:textColor="#F57C0B"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/batterytechology"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Technology:"
        android:layout_below="@+id/batterytemperature"
        />
    <TextView
        android:textColor="#F57C0B"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/batterystatus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:layout_below="@+id/batterytechology"
        />

    <TextView
        android:textColor="#F57C0B"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/batteryhealth"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Health:"
        android:layout_below="@+id/batterystatus"/>

    <TextView
        android:id="@+id/batteryChargingMethod"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Charging method:"
        android:layout_below="@id/batteryhealth"
        android:textColor="#F57C0B"
        android:textSize="20sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/batteryChargingTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Time to full charge:"
        android:layout_below="@id/batteryChargingMethod"
        android:textColor="#F57C0B"
        android:textSize="20sp"
        android:gravity="center"/>





</RelativeLayout>

    <Chronometer
        android:textColor="#F57C0B"
        android:textSize="20sp"
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/relativeLayout"
        android:layout_alignRight="@+id/top"
        android:layout_alignEnd="@+id/top" />

    <TextView
        android:id="@+id/USBType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F57C0B"
        android:textSize="20sp"
        android:text="USB"
        android:layout_above="@+id/chronometer"
        android:layout_alignLeft="@+id/chronometer"
        android:layout_alignStart="@+id/chronometer" />

    <TextView
        android:id="@+id/ACType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC"
        android:textColor="#F57C0B"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/USBType"
        android:layout_alignBottom="@+id/USBType"
        android:layout_toRightOf="@+id/USBType"
        android:layout_toEndOf="@+id/USBType" />

    <TextView
        android:id="@+id/LastFullTime"
        android:text="Last full charge: "
        android:gravity="center"
        android:textColor="#F57C0B"
        android:textSize="20sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:gravity="center"
        android:id="@+id/infoText"
        android:text="About app"
        android:textColor="#F57C0B"
        android:textSize="20sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
